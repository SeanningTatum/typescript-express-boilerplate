paths:
  /api/{{lowerCase version}}/{{lowerCase rootRoute}}/{{pascalCase routeName}}:
    {{lowerCase method}}:
      tags: [{{pascalCase rootRoute}}]
      summary: {{upperCase method}} {{pascalCase rootRoute}}
      security:
        - bearerAuth: []
      requestBody:
        content:
          application/json:
            schema:
              type: object
              required:
                - username
                - password
              properties:
                username:
                  type: string
                password:
                  type: string
                  format: password
      responses:
        200:
          description: Success
          schema:
            $ref: '#/components/schemas/{{pascalCase rootRoute}}'
        400:
          description: Invalid Body or Params
        401:
          description: Unauthorized, Bearer Token is required
        422:
          description: {{pascalCase rootRoute}} is already created
        500:
          description: Internal Server Error
